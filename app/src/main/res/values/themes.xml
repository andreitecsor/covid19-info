<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndreiTecsorHW2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/stone_blue</item>
        <item name="colorPrimaryVariant">@color/shadow_dark_blue</item>
        <item name="colorOnPrimary">@color/cloudy_sky_blue</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cloudy_sky_blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
